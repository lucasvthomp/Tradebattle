@layer base {
  * {
    @apply border-border;
  }

  html {
    @apply bg-background;
    background: #0A1A2F !important;
    min-height: 100%;
    height: 100%;
    overscroll-behavior: none;
  }

  body {
    @apply bg-background text-foreground;
    font-family: 'Inter', 'Segoe UI', 'Roboto', system-ui, -apple-system, sans-serif;
    font-feature-settings: 'cv11', 'ss01';
    font-variation-settings: 'opsz' 32;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: #0A1A2F !important;
    background-attachment: fixed !important;
    min-height: 100vh;
    height: 100%;
    overscroll-behavior-y: none;
  }

  /* Prevent white background from showing on overscroll */
  #root {
    background: #0A1A2F;
    min-height: 100vh;
  }
  
  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: hsl(240, 6%, 16%);
  }
  
  ::-webkit-scrollbar-thumb {
    background: hsl(240, 6%, 24%);
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: hsl(142, 76%, 36%);
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
  
  /* Gaming-inspired utilities */
  .neon-glow {
    box-shadow: var(--shadow-neon);
  }
  
  .gold-glow {
    box-shadow: var(--shadow-gold);
  }
  
  .card-glow {
    box-shadow: var(--shadow-card);
  }
  
  .gradient-primary {
    background: var(--gradient-primary);
  }
  
  .gradient-secondary {
    background: var(--gradient-secondary);
  }
  
  .gradient-accent {
    background: var(--gradient-accent);
  }
  
  .gradient-card {
    background: var(--gradient-card);
  }
  
  /* Enhanced animations */
  .animate-pulse-slow {
    /* Removed pulse animation to prevent moving gradients */
  }
  
  .animate-glow {
    /* Removed glow animation to prevent moving gradients */
  }
  
  .animate-slide-up {
    animation: slideUp 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .animate-fade-in {
    animation: fadeIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .animate-float {
    /* Removed float animation to prevent moving gradients */
  }
  
  /* Interactive hover effects */
  .hover-lift {
    transition: transform 0.2s ease;
  }
  
  .hover-lift:hover {
    transform: translateY(-1px);
  }
  
  .hover-glow:hover {
    box-shadow: var(--shadow-neon);
  }
  
  .hover-scale:hover {
    transform: scale(1.02);
  }
  
  /* Navigation styling */
  .nav-link {
    @apply transition-all duration-300 ease-in-out relative;
    position: relative;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--gradient-primary);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateX(-50%);
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
  
  /* Gaming-themed borders */
  .border-neon {
    border-color: var(--neon-green);
  }
  
  .border-gold {
    border-color: var(--gold);
  }
  
  /* Status indicators */
  .status-active {
    background: var(--gradient-primary);
    color: hsl(0, 0%, 0%);
  }
  
  /* More opaque navigation bars and sidebars */
  .card {
    background-color: hsl(var(--card) / 0.8) !important;
    backdrop-filter: blur(12px);
  }
  
  .status-profit {
    color: var(--green-profit);
  }
  
  .status-loss {
    color: var(--red-loss);
  }
  
  /* Button enhancements */
  .btn-primary {
    background: hsl(var(--primary));
    border: none;
    color: hsl(var(--primary-foreground));
    font-weight: 600;
    transition: opacity 0.2s ease;
  }
  
  .btn-primary:hover {
    opacity: 0.9;
  }
  
  .btn-secondary {
    background: hsl(var(--secondary));
    border: 1px solid hsl(var(--border));
    transition: border-color 0.2s ease;
  }
  
  .btn-secondary:hover {
    border-color: hsl(var(--primary));
  }
  
  .btn-accent {
    background: var(--gradient-accent);
    color: hsl(0, 0%, 0%);
    font-weight: 600;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .btn-accent:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-gold);
  }
  
  /* Interactive card effects */
  .interactive-card {
    @apply transition-colors duration-200;
    background: var(--card);
    border: 1px solid var(--border);
  }
  
  .interactive-card:hover {
    border-color: hsl(var(--border));
  }
  
  /* Gradient text effects */
  .gradient-text {
    color: hsl(var(--foreground));
  }
  
  .gradient-text-profit {
    background: linear-gradient(135deg, var(--green-profit), hsl(142, 76%, 46%));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .gradient-text-loss {
    background: linear-gradient(135deg, var(--red-loss), hsl(0, 84%, 70%));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Ensure proper transitions for all elements */
  * {
    transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out, border-color 0.3s ease-in-out;
  }

  /* Dark mode specific overrides for footer and other components */
  .dark .bg-gray-900 {
    background-color: hsl(240, 10%, 8%);
  }

  .dark .text-gray-400 {
    color: hsl(0, 0%, 65%);
  }

  .dark .border-gray-800 {
    border-color: hsl(240, 6%, 24%);
  }
}

/* Keyframe animations */
@keyframes glow {
  from {
    text-shadow: 0 0 10px var(--neon-green), 0 0 20px var(--neon-green), 0 0 30px var(--neon-green);
  }
  to {
    text-shadow: 0 0 20px var(--neon-green), 0 0 30px var(--neon-green), 0 0 40px var(--neon-green);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

@keyframes slideInFromLeft {
  from {
    opacity: 0;
    transform: translateX(-50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInFromRight {
  from {
    opacity: 0;
    transform: translateX(50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.animate-fade-in {
  animation: fadeIn 0.6s ease-out;
}

.animate-slide-in-left {
  animation: slideInFromLeft 0.6s ease-out;
}

.animate-slide-in-right {
  animation: slideInFromRight 0.6s ease-out;
}

/* Smooth transitions */
.smooth-transition {
  transition: all 0.3s ease;
}

/* Hover effects */
.hover-lift:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.card-hover:hover {
  transform: translateY(-4px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

/* Loading animations */
.loading-bar {
  height: 2px;
  background: linear-gradient(90deg, #000 0%, #666 50%, #000 100%);
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% { transform: scaleX(0); }
  100% { transform: scaleX(1); }
}

/* Typography improvements */
h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  line-height: 1.2;
}

p {
  line-height: 1.6;
}

/* Focus styles */
button:focus-visible,
input:focus-visible,
textarea:focus-visible {
  outline: 2px solid hsl(var(--ring));
  outline-offset: 2px;
}

