  background: linear-gradient(135deg, var(--neon-green), hsl(142, 76%, 46%));
  color: hsl(0, 0%, 100%);
  @apply text-white font-semibold;
  box-shadow: 0 0 20px var(--neon-green);
  /* Removed pulse-glow animation to prevent moving gradients */
}

.status-inactive {
  background: linear-gradient(135deg, var(--red-loss), hsl(0, 84%, 70%));
  @apply text-white font-semibold;
}

.status-waiting {
  background: linear-gradient(135deg, var(--gold), hsl(51, 100%, 60%));
  @apply text-black font-semibold;
}

/* Sidebar and Chat Panel Enhancements */
